@import "components/*"
@import "theme/*";

.page-padding {
  padding-top: 32px;
}

html, body {
  height: 100%;
}

.helper-grow {
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 100%;
}

.landing {
  background: url('/images/bg.jpg');
  display: flex;
  align-items: center;
  height: 100vh;
  width: 100vw;
}

.landing img {
  width: 128px;
  height: 128px;
  margin-bottom: 32px;
}

.landing a {
  border-bottom: 1px dashed #00695C;
  color: #00695C;
  margin: 0 8px;
  line-height: 2rem;
  border-radius: 2px;
  display: inline-block;
}

.landing a:hover {
  margin: 0;
  padding: 0 8px;
  text-decoration: none;
  color: #E0F2F1;
  border: none;
  background: #00695C;
}

.landing-box {
  background: #fff;
  padding: 32px 0;
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.14), 0 1px 10px 0 rgba(0, 0, 0, 0.12), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
  width: 100%;
}

.layout-right {
  
}

::-webkit-scrollbar {
  width:  8px;
  height: 8px;
}

::-webkit-scrollbar-thumb {
  background: #00695C;
}

::-webkit-scrollbar-track {
  background: #ccc;
}

body {
  scrollbar-face-color: #00695C;
  scrollbar-track-color: #ccc;
}

.layout-messages {
  overflow-y: scroll;
  max-height: calc(100vh - 48px);
  padding: 16px 0;
  flex: 1;
}

.layout-sendform {
  height: 48px;
}

.layout-sendform {
  display: flex;
  flex-direction: row;
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.14), 0 1px 10px 0 rgba(0, 0, 0, 0.12), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
}

.layout-sendform input {
  flex: 1;
  padding: 0 16px;
  line-height: 1.5rem;
  border: none;
  outline: none;
}

.layout-sendform .btn {
  padding: 0 24px;
  border-radius: 0;
  border: 0;
  border-left: 1px solid #ccc;
}

@media screen and (max-width: 768px) {
  .layout-sendform {
    width: 100%;
    position: fixed;
    bottom: 0;
  }
}
