.user-list-wrapper {
  display: flex;
  background: #424242;
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.14), 0 1px 10px 0 rgba(0, 0, 0, 0.12), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
}

.user-list {
  list-style: none;
  padding: 0;
  margin: 0;
  flex: 1;
}

.user-list__item {

}

.user-list__user {
  color: #fff;
  text-decoration: none;
  line-height: 2rem;
  display: block;
  padding: 0 24px;
}

.user-list__user:hover {
  background: #00695C;
  color: #E0F2F1;
}

.user-list__user:hover,
.user-list__user:active,
.user-list__user:focus {
  text-decoration: none;
}

.user-list__header {
  color: #E0F2F1;
  display: block;
  padding: 36px 24px 24px 24px;
}
